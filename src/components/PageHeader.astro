---
interface Props {
  label: string;
  title: string;
  description: string;
}

const { label, title, description } = Astro.props;
---

<header class="flex max-w-2xl flex-col gap-3">
  <p class="text-xs font-semibold uppercase tracking-[0.3em] text-[#7f6b5c]">
    {label}
  </p>
  <h1 class="font-['Fraunces'] text-3xl sm:text-4xl lg:text-5xl">
    {title}
  </h1>
  <p class="text-base text-[#5e4b41]">
    {description}
  </p>
</header>
