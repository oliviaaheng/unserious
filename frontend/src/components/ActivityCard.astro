---
interface Props {
  choice: "a" | "b";
}

const { choice } = Astro.props;
---

<button
  class="group flex h-[380px] w-full flex-col overflow-hidden rounded-2xl bg-[#fff7f0] text-left shadow-lg transition duration-200 hover:-translate-y-1 hover:shadow-xl focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-[#c9b6a4] sm:h-[400px] lg:h-[430px]"
  type="button"
  data-choice={choice}
  data-card
>
  <div class="relative h-52 w-full bg-cover bg-center sm:h-56 lg:h-64" data-image>
    <span
      class="absolute left-2 top-2 hidden rounded-full bg-[#d9824c]/90 px-2.5 py-0.5 text-[11px] font-semibold text-white"
      data-category
    ></span>
    <div
      class="absolute inset-0 flex items-center justify-center bg-black/50 p-4 opacity-0 backdrop-blur-sm transition-opacity duration-300 group-hover:opacity-100"
      data-description-overlay
    >
      <p class="line-clamp-5 text-center text-sm leading-relaxed text-white" data-description></p>
    </div>
  </div>
  <div class="grid flex-1 gap-1 px-5 pb-4 pt-4">
    <h2 class="text-lg font-semibold text-[#2b2623]" data-title></h2>
    <p
      class="text-xs font-semibold uppercase tracking-[0.18em] text-[#8d7666]"
      data-address
    ></p>
    <p class="mt-1 flex items-center gap-2 text-xs text-[#8d7666]" data-meta>
      <span data-cost></span>
      <span data-website-wrapper class="hidden">
        <span class="text-[#c9b6a4]">&middot;</span>
        <a
          data-website
          class="truncate underline decoration-[#c9b6a4] underline-offset-2 hover:text-[#d9824c]"
          target="_blank"
          rel="noopener noreferrer"
          onclick="event.stopPropagation()"
        ></a>
      </span>
    </p>
  </div>
</button>
